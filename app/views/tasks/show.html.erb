
<div class="task-container">

<h1><%= @task.title%></h1>

<div class="details"><%= @task.details%></div>

  <%if @task.completed == false%>
      <i class="far fa-square"></i><p>This task is not completed yet</p>
    <% else %>
      <i class="far fa-check-square"></i><p>This task is completed</p>
    <% end %>

<p> <%= link_to "Edit task", edit_task_path(@task) %></p>
<p> <%= link_to "Back to index", tasks_path %></p>

</div>


