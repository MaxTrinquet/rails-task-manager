
<h1>My Tasks </h1>
<div class="tasks">
  <% @tasks.each do |task| %>
    <div class="task">
      <%if task.completed == false%>
        <i class="far fa-square"></i><p> <%= link_to task.title, task_path(task)%> </p>
      <% else %>
        <i class="far fa-check-square"></i> <p><%= link_to task.title, task_path(task)%></p>
      <% end %>
    </div>
  <% end %>

<p><%= link_to 'Create a new task', tasks_new_path%></p>

</div>
